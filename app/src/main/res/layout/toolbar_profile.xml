<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tvMyFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/myfeed"
            android:textColor="@color/white"
            android:textSize="@dimen/titletxtsize" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/profileiconrigtmargin"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivMyProfile"
                android:layout_width="@dimen/profileicondim"
                android:layout_height="@dimen/profileicondim"
                android:src="@drawable/profileicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="@dimen/proicontxtsize" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
