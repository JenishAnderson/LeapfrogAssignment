<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/rootlayoutpaddleright"
        android:paddingRight="@dimen/rootlayoutpaddleright"
        android:paddingTop="@dimen/rootlayoutpaddtop">


        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="@dimen/profileimgsize"
            android:layout_height="@dimen/profileimgsize"
            android:src="@drawable/ic_launcher" />


        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/logoutbtnmargin"
            android:text="Freak Shakya"
            android:textSize="@dimen/profilenametxtsize" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btnheight"
            android:layout_margin="@dimen/logoutbtnmargin"
            android:text="@string/logout"
            android:textSize="@dimen/logoutbtntxtsize" />

    </LinearLayout>


</LinearLayout>